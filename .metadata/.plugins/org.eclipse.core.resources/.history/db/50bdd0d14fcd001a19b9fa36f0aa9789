package day06;

import java.lang.Math;

public class Circle extends Shape{
	double radius;
	
	public Circle(double radius) {
		this.radius = radius;
	}
	public double getArea(int r) {
		return r * r * Math.PI;
	}
}



class CircleI implements ShapeI{
	double radius;
	
	public CircleI(double radius) {
		this.radius = radius;
	}
	public double getArea(int r) {
		return r * r * Math.PI;
	}
}

abstract interface ShapeI{
	public abstract double getArea(int r);
}
